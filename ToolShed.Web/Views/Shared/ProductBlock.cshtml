@model Product

<div class="card-group">
    <div class="card-body">
        <div class="row">
            <div class="col-md-4">
                <div>
                    <h2>@Model.Name</h2>
                    <p>@Model.Description</p>
                    <span class="badge badge-success">@($"Pris: {Model.Price:C2}")</span>
                </div>
               
                <div class="col-md-8">
                    <img src="http://via.placeholder.com/150x150" class="float-right" />
                </div>
            </div>
        </div>
    </div>
</div>
